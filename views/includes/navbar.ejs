<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    color: #fff;
    display: inline;
    font-size: 1rem;
    margin-right: 0.5rem;
  }
  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem;
  }

  /* Full-screen white background for expanded navbar */
  .navbar-collapse.show {
    background-color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    overflow-y: auto;
    z-index: 1040;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/Listings"><i class="fa-solid fa-person-walking-luggage"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/Listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/search" method="get">
          <input class="form-control me-2 search-input" type="search" placeholder="Search Destinations" name="searchTerm" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <!-- <a class="nav-link" href="/Listings/new">Airbnb your home</a> -->
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/Login"><b>Login</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link" href="/Logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  const navbarToggler = document.querySelector('.navbar-toggler');
  const navbarCollapse = document.querySelector('#navbarNavAltMarkup');
  const body = document.body;

  // Toggle body scrolling based on navbar state
  navbarToggler.addEventListener('click', () => {
    if (navbarCollapse.classList.contains('show')) {
      body.style.overflow = ''; // Enable body scrolling
    } else {
      body.style.overflow = 'hidden'; // Disable body scrolling
    }
  });
</script>
