<!-- New.ejs is made to create new istings and them -->
<%layout("/layouts/boilerplate")%> 
<div class="row">
    <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <!-- here we've used bootstrap form overview and made separate div for sections and mb-3 is bootstrap class for spacing -->
    <form action="/Listings" method="post">
        <div class="mb-3">  
            <label for="title"class="form-label">Title</label>
   <input type="text" 
   name="listing[title]" 
   id="" 
   placeholder="Enter your title"
   class="form-control">
        </div>
        <div class="mb-3">
            <label for="description"class="form-label">Description</label>
            <textarea type="text" 
            name="listing[description]" 
            id=""
            class="form-control"
            ></textarea>
        </div>
        <div class="mb-3">
            <label for="image"class="form-label">Image URL</label>
            <input type="text" name="listing[image]" id="" placeholder="Enter your image url"
            class="form-control">
            </div>
        
 <!-- here we're are making all variable as a key of object [listing] so listing object key will be title,description etc.. -->
 <!-- We've added price and location in row div so they will be in same row till screen is large but after screen goes below medium lvl they will come in one line -->
 <div class="row">
    <div class="mb-3 col-md-4">
    <label for="price"class="form-label">Price</label>
     <input type="number" name="listing[price]" id="" placeholder="Enter your price" class="form-control">
 </div>
 
 <div class="mb-3 col-md-8">
    <label for="location"class="form-label">Location</label>
    <input type="text" name="listing[location]" id="" placeholder="Enter your location" class="form-control">
 </div>

 </div>
 
 <div class="mb-3">
    <label for="country"class="form-label">Country</label>
     <input type="text" name="listing[country]" id="" placeholder="Enter your country"class="form-control">
 </div>
 <button class="btn btn-dark add-btn">Add</button>
 <br><br>
    </form>
</div>
</div>