<!-- Edit file is made for doing some editing in our listings -->
<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form action="/Listings/<%=listing._id%>?_method=PUT" method="post">
        <div class="mb-3">
            <label for="title"class="form-label">Title</label> 
            <input type="text" name="listing[title]" id="" value="<%=listing.title%>" class="form-control">
        </div>

 <!-- here we're are making all variable as a key of object [listing] so listing object key will be title,description etc.. -->
 
 <div class="mb-3">
    <label for="description"class="form-label">Description</label>
    <textarea type="text" name="listing[description]" id="" value="<%=listing.description%>" class="form-control"></textarea>
 
 </div>
 
 <div class="mb-3">
<label for="image"class="form-label">Image URl</label>
    <input type="text" name="listing[image]" id="" value="<%=listing.image%>"class="form-control">
 </div>
 <!-- Created common div row for price and locationso they will be set accordingly -->
 <div class="row mt-3">
    <div class="mb-3 col-md-4">
    <label for="price"class="form-label">Price</label>
     <input type="number" name="listing[price]" id="" value="<%=listing.price%>" class="form-control">
 </div>

 <div class="mb-3 col-md-8">
    <label for="loction"class="form-label">Location</label>
    <input type="text" name="listing[location]" id="" value="<%=listing.location%>"class="form-control">
 </div>
 </div>
 
 
 <div class="mb-2">
    <label for="country"class="form-label">Country</label>
<input type="text" name="listing[country]" id="" value="<%=listing.country%>" class="form-control">
 </div> 
 
 <button class="btn btn-dark edit-btn mb-3 mt-2">Edit</button> 
    </form></div></div>
</body>
